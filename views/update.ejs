<body>
    <div class="bg">
      <nav>
        <a href="/">Home</a>
        <a href="/Post">Post</a>
        <a href="/review">Reviews</a>
      </nav>
      <div id="overlay">
        <div id="modal">
           
            <% for(let i of data){ %>
                <% if (i._id == id){%>
           <form method = "POST" action = "/update/<%=i._id%>">
            <input id="taskName" type="text" placeholder="Game Name" name="gamename" value = '<%=i.name%>'>
            <br>
            <textarea id="taskDetails" placeholder="Write Your Reviews..." name="review" value = '<%=i.review%>'></textarea>
           
            <button id="taskDone">Submit</button>
          </form>
          <% } %>
          <% } %>

        </div>
      </div>
    </div>
</body>
